FROM ubuntu:15.10
RUN apt-get -y update
RUN apt-get -y upgrade
RUN apt-get install -y jq curl npm nodejs git
# COPY package.json package.json
# RUN VERSION=`jq -r .engines.npm package.json` && npm install -g n@2.0.2 npm@$VERSION
# RUN VERSION=`jq -r .engines.node package.json` && n $VERSION
RUN cp `which nodejs` /usr/bin/node
RUN useradd -ms /bin/bash local
RUN chown -R local /usr/local
USER local
WORKDIR /home/local
ENTRYPOINT npm link ; bash